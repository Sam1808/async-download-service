FROM ubuntu:20.04
WORKDIR /code
COPY . /code/
RUN apt-get update && apt-get install -y zip && apt-get install -y python3.8 && apt-get install -y python3-pip && apt-get clean && pip install -r requirements.txt
ENTRYPOINT ["python3", "server.py", "--debug", "--delay", "1", "--photo_dir", "test_photos", "--fragment", "100"]
